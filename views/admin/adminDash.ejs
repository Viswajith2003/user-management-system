<%- include("../layouts/header.ejs") %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse" style="min-height: 100vh;">
                <div class="position-sticky pt-3">
                    <h4 class="text-white text-center mb-4">
                        <i class="fas fa-user-shield"></i> Admin Panel
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white active bg-primary" href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/profile">
                                <i class="fas fa-user"></i> My Profile
                            </a>
                        </li>
                    
                        <li class="nav-item mt-auto">
                            <a class="nav-link text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-users"></i> Users Management
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/newUser" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add New User
                        </a>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-list"></i> Users List</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(Users.length> 0) {
                                        for(let i = 0; i < Users.length; i++) { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= i + 1 %>
                                                </th>
                                                <td>
                                                    <%= Users[i].name %>
                                                </td>
                                                <td>
                                                    <%= Users[i].email %>
                                                </td>
                                                <td>
                                                    <%= Users[i].mobile %>
                                                </td>
                                                <td>
                                                    <img src="/userImages/<%= Users[i].image %>" alt="User Image"
                                                        class="rounded-circle" width="50" height="50"
                                                        style="object-fit: cover;">
                                                </td>
                                                <td>
                                                    <% if(Users[i].is_verified===0) { %>
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="fas fa-exclamation-circle"></i> Not Verified
                                                        </span>
                                                        <% } else { %>
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check-circle"></i> Verified
                                                            </span>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/editUser?id=<%= Users[i]._id %>"
                                                        class="btn btn-sm btn-warning me-1" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/admin/deleteUser?id=<%= Users[i]._id %>"
                                                        class="btn btn-sm btn-danger" title="Delete"
                                                        onclick="return confirm('Are you sure you want to delete this user?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% } } else { %>
                                                <tr>
                                                    <td colspan="7" class="text-center py-5">
                                                        <i class="fas fa-users-slash fa-3x text-muted mb-3 d-block"></i>
                                                        <h5 class="text-muted">No Users Found</h5>
                                                        <p class="text-muted">Start by adding your first user</p>
                                                        <a href="/admin/new-user" class="btn btn-primary mt-2">
                                                            <i class="fas fa-plus"></i> Add User
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add FontAwesome for icons if not already included -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .sidebar {
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, .8);
            padding: 12px 20px;
            border-radius: 5px;
            margin-bottom: 5px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .sidebar .nav-link.active {
            color: white;
        }

        .sidebar .nav-link i {
            margin-right: 8px;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .table-responsive {
            border-radius: 0 0 10px 10px;
        }

        .btn {
            transition: all 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>

    <%- include("../layouts/footer.ejs") %>