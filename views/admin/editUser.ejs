<%- include('../layouts/header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse" style="min-height: 100vh;">
                <div class="position-sticky pt-3">
                    <h4 class="text-white text-center mb-4">
                        <i class="fas fa-user-shield"></i> Admin Panel
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/dashboard">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/profile">
                                <i class="fas fa-user"></i> My Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/admin/new-user">
                                <i class="fas fa-user-plus"></i> Add New User
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white active bg-primary" href="/admin/adminDash">
                                <i class="fas fa-users"></i> Users List
                            </a>
                        </li>
                        <li class="nav-item mt-auto">
                            <a class="nav-link text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-user-edit"></i> Edit User
                    </h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="/admin/adminDash" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>

                <!-- Edit User Form -->
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-edit"></i> Update User Information</h5>
                            </div>
                            <div class="card-body p-4">
                                <form action="" method="POST">
                                    <!-- Name Field -->
                                    <div class="mb-4">
                                        <label for="name" class="form-label fw-bold">
                                            <i class="fas fa-user"></i> Full Name
                                        </label>
                                        <input type="name" class="form-control form-control-lg" id="name" name="name"
                                            placeholder="Enter Name" value="<%= user.name %>" required>
                                    </div>

                                    <!-- Email Field -->
                                    <div class="mb-4">
                                        <label for="email" class="form-label fw-bold">
                                            <i class="fas fa-envelope"></i> Email Address
                                        </label>
                                        <input type="email" class="form-control form-control-lg" id="email" name="email"
                                            placeholder="Enter Email" value="<%= user.email %>" required>
                                    </div>

                                    <!-- Mobile Field -->
                                    <div class="mb-4">
                                        <label for="mobile" class="form-label fw-bold">
                                            <i class="fas fa-phone"></i> Mobile Number
                                        </label>
                                        <input type="text" class="form-control form-control-lg" id="mobile"
                                            name="mobile" placeholder="Enter Mobile" value="<%= user.mobile %>"
                                            required>
                                    </div>

                                    <!-- Verification Status -->
                                    <div class="mb-4">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-check-circle"></i> Verification Status
                                        </label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="verify" id="verified"
                                                value="1" <% if(user.is_verified===1){%>checked<%} %>>
                                                <label class="form-check-label" for="verified">
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Verified
                                                    </span>
                                                </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="verify" id="unverified"
                                                value="0" <% if(user.is_verified===0){%>checked<%} %>>
                                                <label class="form-check-label" for="unverified">
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-exclamation-circle"></i> Unverified
                                                    </span>
                                                </label>
                                        </div>
                                    </div>

                                    <!-- Hidden ID Field -->
                                    <input type="hidden" name="id" value="<%= user._id %>">

                                    <!-- Submit Button -->
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-save"></i> Update User
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Back Link Card -->
                        <div class="text-center mt-3">
                            <a href="/admin/adminDash" class="btn btn-link text-decoration-none">
                                <i class="fas fa-arrow-left"></i> Cancel and Go Back
                            </a>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add FontAwesome for icons if not already included -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .sidebar {
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, .8);
            padding: 12px 20px;
            border-radius: 5px;
            margin-bottom: 5px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .sidebar .nav-link.active {
            color: white;
        }

        .sidebar .nav-link i {
            margin-right: 8px;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }

        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn {
            transition: all 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .form-label {
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .badge {
            padding: 0.5em 0.75em;
            font-size: 0.9rem;
        }
    </style>

    <%- include('../layouts/footer.ejs') %>