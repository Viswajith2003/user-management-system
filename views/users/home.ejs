<% include("../layouts/header.ejs")%>
    <h2>Welcome,<%= user.name %>
    </h2>

    <table width="50%">
        <tr>
            <td><img src="/userImages/<%= user.image %>" width="100px" height="100px" alt="<%= user.image %>"></td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <%= user.email %>
            </td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td>
                <%= user.mobile %>
            </td>
        </tr>
        <tr>
            <td>Verified</td>
            <td>
                <% if(user.is_verified==1) { %>
                    <p>True</p>
                    <% } %>
            </td>
        </tr>
    </table><br>
    <a href="/edit?id=<%=user._id%>">Edit</a> <br><br>
    <a href="/logout">Logout</a>
    <% include("../layouts/footer.ejs")%>