<%- include("../layouts/header.ejs") %>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse" style="min-height: 100vh;">
                <div class="position-sticky pt-3">
                    <h4 class="text-white text-center mb-4">
                        <i class="fas fa-user-circle"></i> User Portal
                    </h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white active bg-primary" href="/dashboard">
                                <i class="fas fa-home"></i> My Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/edit?id=<%=user._id%>">
                                <i class="fas fa-edit"></i> Edit Profile
                            </a>
                        </li>
                        <!-- <li class="nav-item">
                            <a class="nav-link text-white" href="/settings">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </li> -->

                        <li class="nav-item mt-auto">
                            <a class="nav-link text-danger" href="/logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">
                        <i class="fas fa-user"></i> Welcome, <%= user.name %>
                    </h1>

                </div>

                <!-- Profile Card -->
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-id-card"></i> Profile Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Profile Image Section -->
                            <div class="col-md-4 text-center mb-4">
                                <div class="position-relative d-inline-block">
                                    <img src="/userImages/<%= user.image %>"
                                        class="rounded-circle border border-3 border-primary shadow" width="150"
                                        height="150" alt="<%= user.image %>" style="object-fit: cover;">
                                    <% if(user.is_verified==1) { %>
                                        <span class="position-absolute bottom-0 end-0 bg-success rounded-circle p-2">
                                            <i class="fas fa-check text-white"></i>
                                        </span>
                                        <% } %>
                                </div>
                                <h4 class="mt-3 mb-1">
                                    <%= user.name %>
                                </h4>
                                <% if(user.is_verified==1) { %>
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-shield-alt"></i> Verified Account
                                    </span>
                                    <% } else { %>
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="fas fa-clock"></i> Pending Verification
                                        </span>
                                        <% } %>
                            </div>

                            <!-- Profile Details Section -->
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-borderless table-hover">
                                        <tbody>
                                            <tr>
                                                <td class="fw-bold text-muted" style="width: 30%;">
                                                    <i class="fas fa-envelope text-primary me-2"></i>Email Address
                                                </td>
                                                <td class="fs-5">
                                                    <%= user.email %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="fw-bold text-muted">
                                                    <i class="fas fa-mobile-alt text-success me-2"></i>Mobile Number
                                                </td>
                                                <td class="fs-5">
                                                    <%= user.mobile %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="fw-bold text-muted">
                                                    <i class="fas fa-shield-alt text-info me-2"></i>Verification Status
                                                </td>
                                                <td>
                                                    <% if(user.is_verified==1) { %>
                                                        <span class="badge bg-success fs-6 px-3 py-2">
                                                            <i class="fas fa-check-circle me-1"></i>Account Verified
                                                        </span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                                                <i
                                                                    class="fas fa-exclamation-triangle me-1"></i>Verification
                                                                Pending
                                                            </span>
                                                            <% } %>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Quick Actions -->

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account Summary Cards -->
                <div class="row mt-4">
                    <div class="col-md-4 mb-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-user-check fa-2x mb-2"></i>
                                <h5>Account Status</h5>
                                <p class="mb-0">
                                    <% if(user.is_verified==1) { %>Active<% } else { %>Pending<% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-envelope fa-2x mb-2"></i>
                                <h5>Email</h5>
                                <p class="mb-0">
                                    <% if(user.is_verified==1) { %>Verified<% } else { %>Unverified<% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-mobile-alt fa-2x mb-2"></i>
                                <h5>Mobile</h5>
                                <p class="mb-0">Connected</p>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add FontAwesome for icons if not already included -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        .sidebar {
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }

        .sidebar .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, .8);
            padding: 12px 20px;
            border-radius: 5px;
            margin-bottom: 5px;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .sidebar .nav-link.active {
            color: white;
        }

        .sidebar .nav-link i {
            margin-right: 8px;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }

        .table-responsive {
            border-radius: 0 0 10px 10px;
        }

        .btn {
            transition: all 0.3s;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .profile-image {
            transition: transform 0.3s;
        }

        .profile-image:hover {
            transform: scale(1.05);
        }

        .card.bg-primary:hover,
        .card.bg-success:hover,
        .card.bg-info:hover {
            transform: translateY(-5px);
            transition: transform 0.3s;
        }
    </style>

    <%- include("../layouts/footer.ejs") %>